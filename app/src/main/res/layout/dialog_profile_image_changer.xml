<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="414dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundad_backgound"
        android:orientation="vertical">


        <EditText
            android:id="@+id/image_link_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/roundad_backgound"
            android:hint="ჩასვით სურათის მისამართის ლინკი"
            android:padding="5dp">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:padding="5dp">


            <Button
                android:id="@+id/exitphotochangerbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:backgroundTint="#1B0808"
                android:padding="5dp"
                android:text="გაუქმება"
                android:textColor="#000000" />

            <Button
                android:id="@+id/photochangerbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:foregroundTint="#000000"
                android:shadowColor="#000000"
                android:text="ფოტოს შეცვლა"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:iconTint="#000000"
                app:rippleColor="#000000"
                app:strokeColor="#000000"></Button>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>